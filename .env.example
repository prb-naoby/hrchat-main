# HRChat Retrieval API - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED - Qdrant Vector Database
# =============================================================================
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=hr-documents

# =============================================================================
# REQUIRED - Google Gemini API (for dense embeddings)
# =============================================================================
GOOGLE_API_KEY=your-google-api-key
DENSE_EMBEDDING_MODEL=gemini-embedding-001

# =============================================================================
# OPTIONAL - Authentication (leave empty to disable)
# =============================================================================
RETRIEVAL_API_KEY=
BM25_API_KEY=

# =============================================================================
# OPTIONAL - Model Configuration
# =============================================================================
BM25_MODEL=Qdrant/bm25
BM25_CACHE_DIR=/app/data/.cache_fastembed
